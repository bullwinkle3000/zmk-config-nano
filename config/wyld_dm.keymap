#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

//#include <dt-bindings/led/led.h>
//#include <dt-bindings/zmk/mouse.h>
//#include <behaviors/mouse_keys.dtsi>

#define QWERTY 0
#define LOWER 1
#define RAISE 2

// 4x5

/ {
    behaviors {
        window_swap: window_swap {
            compatible = "zmk,behavior-mod-morph";
            label = "WINDOW_SWAP";
            bindings = <&kp LEFT>, <&kp RIGHT>;

            #binding-cells = <0>;
            mods = <(MOD_LCTL)>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp N1     &kp N2         &kp N3  &kp N4     &kp N5                      &kp N6    &kp N7     &kp N8     &kp N9   &kp N0
&kp Q      &kp W          &kp E   &kp R      &kp T                       &kp Y     &kp U      &kp I      &kp O    &kp P
&kp A      &kp S          &kp D   &kp F      &kp G           &kp K_MUTE  &kp H     &kp J      &kp K      &kp L    &kp SEMI
&kp Z      &kp X          &kp C   &kp V      &kp B                       &kp N     &kp M      &kp COMMA  &kp DOT  &kp FSLH
                          &mo 1   &kp SPACE  &kp LEFT_SHIFT              &kp LGUI  &kp ENTER  &mo 2
&kp LCTRL  &kp BACKSPACE                                                                                 &kp ESC  &kp RALT
            >;

            sensor-bindings = <&inc_dec_kp PAGE_UP PAGE_DOWN>;
        };

        lower_layer {
            bindings = <
&kp F1    &kp F2  &kp F3      &kp F4      &kp F5                   &kp F6     &kp F7        &kp F8                &kp F9                 &kp F10
&kp EXCL  &kp AT  &kp HASH    &kp DOLLAR  &kp PRCNT                &kp CARET  &kp AMPS      &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp C_VOLUME_UP
&trans    &trans  &kp DELETE  &kp DEL     &trans         &kp HOME  &kp MINUS  &kp EQUAL     &kp LBRC              &kp RBRC               &kp C_VOLUME_DOWN
&trans    &trans  &trans      &trans      &trans                   &kp TILDE  &kp ASTERISK  &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &trans
                  &kp TAB     &trans      &kp BACKSLASH            &kp PIPE   &kp TAB       &kp GRAVE
&trans    &trans                                                                                                  &kp SINGLE_QUOTE       &kp DOUBLE_QUOTES
            >;

            sensor-bindings = <&inc_dec_kp PAGE_UP PAGE_DOWN>;
        };

        raise_layer {
            bindings = <
&kp F1        &kp F2      &kp F3        &kp F4     &kp F5                    &trans  &kp KP_N7  &kp KP_N8  &kp KP_N9  &kp KP_DIVIDE
&kp F6        &kp F7      &kp F8        &kp F9     &kp F10                   &trans  &kp KP_N4  &kp KP_N5  &kp KP_N6  &kp KP_MULTIPLY
&kp LEFT      &kp DOWN    &kp UP        &kp RIGHT  &kp PGUP  &bt BT_CLR_ALL  &trans  &kp KP_N1  &kp KP_N2  &kp KP_N3  &kp KP_MINUS
&trans        &trans      &trans        &trans     &trans                    &trans  &trans     &trans     &trans     &trans
                          &bt BT_SEL 0  &trans     &trans                    &trans  &trans     &trans
&bt BT_SEL 1  &bt BT_NXT                                                                                   &trans     &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP>;
        };

        extra_layer {
            bindings = <
&trans  &trans  &trans  &trans  &trans              &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans              &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &kp K_MUTE  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans              &trans  &trans  &trans  &trans  &trans
                &trans  &trans  &trans              &trans  &trans  &trans
&trans  &trans                                                              &trans  &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP>;
        };
    };
};
